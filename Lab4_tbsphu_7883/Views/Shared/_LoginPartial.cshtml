@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-light btnMenu" asp-area="Identity" asp-page="/Account/Manage/Index" title="Tài khoản">Hello @User.Identity?.Name!</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-light btnMenu" asp-area="Admin" asp-controller="Admin" asp-action="Index" title="Manage">Quản lý Sản phẩm</a>
    </li>
        <li class="nav-item btnMenu">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-light ">Đăng xuất</button>
        </form>
    </li>
   
}
else
{
    <li class="nav-item">
            <a class="nav-link text-light btnMenu" asp-area="Identity" asp-page="/Account/Register">Tạo tài khoản</a>
    </li>
    <li class="nav-item">
            <a class="nav-link text-light btnMenu" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
    </li>
}
</ul>
